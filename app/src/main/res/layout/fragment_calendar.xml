<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f9f7ff"
    android:padding="@dimen/default_margin"
    tools:context=".presentation.calendar.CalendarFragment">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.example.tasksapp.view.customcalendar.CustomCalendarView
            android:id="@+id/calen_calendar"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/calen_rc_daily_task"
            app:layout_constraintTop_toBottomOf="@id/calen_calendar"
            android:layout_marginTop="@dimen/default_margin"
            android:nestedScrollingEnabled="false"
            tools:itemCount="4"
            tools:listitem="@layout/adp_home_task"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/calen_rc_sub_task"
            app:layout_constraintTop_toBottomOf="@id/calen_rc_daily_task"
            android:layout_marginTop="@dimen/default_margin"
            android:nestedScrollingEnabled="false"
            tools:itemCount="4"
            tools:listitem="@layout/adp_sub_assignment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>