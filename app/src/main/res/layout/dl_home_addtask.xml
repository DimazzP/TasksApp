<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/white"
    android:elevation="0dp"
    app:cardCornerRadius="22dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/default_margin">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/hmaddtask_btn_task"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/space_margin"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/hmaddtask_task_cons"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/hmaddtask_task_check"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/img_circle_check"
                    android:src="@drawable/ic_circle_checklist"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/hmaddtask_task_tittle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/default_margin"
                    android:fontFamily="@font/inter_semi"
                    android:text="@string/hmaddtask_task_title"
                    android:textAlignment="textStart"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    app:layout_constraintStart_toEndOf="@id/hmaddtask_task_check"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/hmaddtask_task_description"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="@string/hmaddtask_task_description"
                    android:textAlignment="textStart"
                    android:textColor="@color/black"
                    android:textSize="13sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="@id/hmaddtask_task_tittle"
                    app:layout_constraintTop_toBottomOf="@id/hmaddtask_task_tittle" />

                <ImageView
                    android:id="@+id/hmaddtask_task_arrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/transparent"
                    android:contentDescription="@string/img_ios_arrow_right"
                    android:src="@drawable/ic_arrow_ios_right"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="@dimen/default_margin"
                android:background="@color/gray_stroke"
                app:layout_constraintTop_toBottomOf="@id/hmaddtask_task_cons" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/hmaddtask_btn_repetitive"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/space_margin"
            app:layout_constraintTop_toBottomOf="@id/hmaddtask_btn_task">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/hmaddtask_repetitive_cons"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/hmaddtask_repetitive_check"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/img_circle_habit"
                    android:src="@drawable/ic_circle_repetitive"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/hmaddtask_repetitive_tittle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/default_margin"
                    android:fontFamily="@font/inter_semi"
                    android:text="@string/hmaddtask_repetitive_title"
                    android:textAlignment="textStart"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    app:layout_constraintStart_toEndOf="@id/hmaddtask_repetitive_check"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/hmaddtask_repetitive_description"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="@string/hmaddtask_repetitive_description"
                    android:textAlignment="textStart"
                    android:textColor="@color/black"
                    android:textSize="13sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="@id/hmaddtask_repetitive_tittle"
                    app:layout_constraintTop_toBottomOf="@id/hmaddtask_repetitive_tittle" />

                <ImageView
                    android:id="@+id/hmaddtask_repetitive_arrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/transparent"
                    android:contentDescription="@string/img_ios_arrow_right"
                    android:src="@drawable/ic_arrow_ios_right"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="@dimen/default_margin"
                android:background="@color/gray_stroke"
                app:layout_constraintTop_toBottomOf="@id/hmaddtask_repetitive_cons" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/hmaddtask_btn_habit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/space_margin"
            app:layout_constraintTop_toBottomOf="@id/hmaddtask_btn_repetitive">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/hmaddtask_habit_cons"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/hmaddtask_habit_check"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/img_circle_habit"
                    android:src="@drawable/ic_circle_date"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/hmaddtask_habit_tittle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/default_margin"
                    android:fontFamily="@font/inter_semi"
                    android:text="@string/hmaddtask_habit_title"
                    android:textAlignment="textStart"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    app:layout_constraintStart_toEndOf="@id/hmaddtask_habit_check"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/hmaddtask_habit_description"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="@string/hmaddtask_habit_description"
                    android:textAlignment="textStart"
                    android:textColor="@color/black"
                    android:textSize="13sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="@id/hmaddtask_habit_tittle"
                    app:layout_constraintTop_toBottomOf="@id/hmaddtask_habit_tittle" />

                <ImageView
                    android:id="@+id/hmaddtask_habit_arrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/transparent"
                    android:contentDescription="@string/img_ios_arrow_right"
                    android:src="@drawable/ic_arrow_ios_right"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="@dimen/default_margin"
                android:background="@color/gray_stroke"
                app:layout_constraintTop_toBottomOf="@id/hmaddtask_habit_cons" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>