<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/white"
    android:elevation="0dp"
    app:cardCornerRadius="22dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:padding="@dimen/default_margin"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/dlprio_title"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="@string/dlprio_title"
            android:layout_width="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:fontFamily="@font/inter_semi"
            android:layout_height="wrap_content"/>
        <androidx.cardview.widget.CardView
            android:id="@+id/dlprio_card_number"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:cardBackgroundColor="#DBD5FF"
            app:cardCornerRadius="16dp"
            app:layout_constraintTop_toBottomOf="@id/dlprio_title"
            android:layout_width="wrap_content"
            android:layout_marginTop="@dimen/default_margin_2"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/dlprio_bt_minus"
                    android:src="@drawable/ic_minus"
                    android:contentDescription="@string/img_minus"
                    android:layout_width="wrap_content"
                    android:padding="@dimen/space_margin"
                    android:layout_height="wrap_content"/>
                <View
                    android:background="@color/gray"
                    android:layout_marginHorizontal="@dimen/space_margin"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"/>
                <TextView
                    android:id="@+id/dlprio_number_priority"
                    android:textSize="24sp"
                    android:fontFamily="@font/inter_semi"
                    android:text="@string/example_number_0"
                    android:layout_width="80dp"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:layout_height="wrap_content"/>
                <View
                    android:background="@color/gray"
                    android:layout_marginHorizontal="@dimen/space_margin"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"/>
                <ImageView
                    android:id="@+id/dlprio_bt_plus"
                    android:src="@drawable/ic_plus"
                    android:contentDescription="@string/img_plus"
                    android:padding="@dimen/space_margin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <TextView
            android:id="@+id/dlprio_description"
            app:layout_constraintTop_toBottomOf="@id/dlprio_card_number"
            app:layout_constraintStart_toStartOf="@id/dlprio_card_number"
            app:layout_constraintEnd_toEndOf="@id/dlprio_card_number"
            android:layout_marginTop="@dimen/default_margin"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:text="@string/dlprio_description"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
        <View
            android:id="@+id/dlprio_line_bottom"
            app:layout_constraintTop_toBottomOf="@id/dlprio_description"
            android:background="@color/gray_stroke"
            app:layout_constraintStart_toStartOf="@id/dlprio_card_number"
            app:layout_constraintEnd_toEndOf="@id/dlprio_card_number"
            android:layout_marginTop="@dimen/default_margin"
            android:layout_width="0dp"
            android:layout_height="2dp"/>
        <TextView
            android:id="@+id/dlprio_bt_cancel"
            android:text="@string/cancel"
            android:fontFamily="@font/inter_semi"
            android:layout_marginTop="@dimen/space_margin"
            android:textSize="14sp"
            android:textColor="@color/black"
            app:layout_constraintEnd_toStartOf="@id/dlprio_bt_ok"
            android:textAlignment="center"
            app:layout_constraintTop_toBottomOf="@id/dlprio_line_bottom"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/dlprio_bt_ok"
            android:text="@string/ok"
            android:textAlignment="center"
            android:fontFamily="@font/inter_semi"
            android:layout_marginTop="@dimen/space_margin"
            android:textSize="14sp"
            app:layout_constraintStart_toEndOf="@id/dlprio_bt_cancel"
            app:layout_constraintTop_toBottomOf="@id/dlprio_line_bottom"
            app:layout_constraintEnd_toEndOf="parent"
            android:textColor="@color/purple_deep"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>