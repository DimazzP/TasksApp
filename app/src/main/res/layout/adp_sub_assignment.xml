<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/adp_subas_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/inter_medium"
        android:text="@string/detask_example_title"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/adp_subas_drop_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/transparent"
        android:contentDescription="@string/img_ios_arrow_right"
        android:padding="@dimen/small_margin"
        android:src="@drawable/ic_ios_arrow_bottom"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <RadioGroup
        android:id="@+id/adp_subas_radio_group"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/adp_subas_drop_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" />
    <View
        app:layout_constraintTop_toBottomOf="@id/adp_subas_radio_group"
        android:layout_marginTop="@dimen/space_margin"
        android:background="@color/gray_stroke"
        android:layout_width="match_parent"
        android:layout_height="2dp"/>
