<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.TasksApp" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="android:windowBackground">@android:color/white</item>
        <!-- Warna latar belakang status bar -->
        <item name="android:statusBarColor">@android:color/white</item>
        <!-- Warna latar belakang navigation bar -->
        <item name="android:navigationBarColor">@android:color/white</item>
        <!-- Warna teks status bar -->
        <item name="android:windowLightStatusBar">true</item>
        <!-- Warna teks navigation bar -->
        <!-- Warna latar belakang aktivitas -->
        <item name="android:colorBackground">@android:color/white</item>
        <item name="colorAccent">@color/purple_deep</item>
        <item name="colorPrimary">@color/purple_deep</item>
        <item name="android:editTextColor">@android:color/black</item>
        <item name="android:textColorSecondaryInverse">@color/white</item>
    </style>
    <style name="PickerTheme" parent="android:Widget.Material.TimePicker">
        <item name="android:headerBackground">@android:color/transparent</item>
        <item name="android:headerTimeTextAppearance">@style/InvisibleText</item>
        <item name="android:numbersTextColor">@android:color/transparent</item>
    </style>

    <style name="InvisibleText">
        <item name="android:textSize">0sp</item>
        <item name="android:textColor">@android:color/transparent</item>
    </style>

    <style name="checkBoxStyle" parent="Base.Theme.AppCompat">
        <item name="colorAccent">@color/black</item>
        <item name="android:textColorSecondary">@color/purple_deep</item>
    </style>
    <style name="Theme.TasksApp" parent="Base.Theme.TasksApp" />
</resources>